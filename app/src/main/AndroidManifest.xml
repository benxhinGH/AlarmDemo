<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lius.alarmdemo">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AlarmListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AddAlarmActivity"/>

        <receiver android:name=".AlarmReceiver">
        </receiver>

        <receiver android:name=".SetAlarmReceiver">
            <intent-filter>
                <action android:name="com.lius.alarmdemo.openalarm"/>
                <action android:name="com.lius.alarmdemo.closealarm"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
